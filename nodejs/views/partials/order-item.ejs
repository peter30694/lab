<!-- Order Item Component -->
<tr class="order-item">
    <td>
        <div class="d-flex align-items-center">
            <div class="product-image-container me-3">
                <img src="<%= product.imageUrl || '/images/default-product.jpg' %>" 
                     class="product-image" 
                     alt="<%= product.title || 'Sản phẩm' %>"
                     onerror="this.src='/images/default-product.jpg'">
            </div>
            <div>
                <h6 class="mb-1 product-title">
                    <%= product.title || 'Sản phẩm không xác định' %>
                </h6>
                <small class="text-muted d-block">
                    ID: <%= product._id ? product._id.toString().substring(0, 8) : 'N/A' %>
                </small>
                <% if (product.category) { %>
                    <small class="text-muted">
                        <i class="fas fa-tag me-1"></i><%= product.category %>
                    </small>
                <% } %>
            </div>
        </div>
    </td>
    <td class="text-center">
        <span class="price-display">
            <%= product.price ? product.price.toLocaleString('vi-VN') : '0' %>₫
        </span>
    </td>
    <td class="text-center">
        <span class="quantity-badge badge bg-light text-dark">
            <%= product.quantity || 0 %>
        </span>
    </td>
    <td class="text-end">
        <span class="total-price fw-bold text-primary">
            <%= product.price && product.quantity ? (product.price * product.quantity).toLocaleString('vi-VN') : '0' %>₫
        </span>
    </td>
</tr>

<style>
.order-item {
    transition: background-color 0.2s;
}

.order-item:hover {
    background-color: #f8f9fa;
}

.product-image-container {
    width: 60px;
    height: 60px;
    overflow: hidden;
    border-radius: 8px;
    border: 1px solid #dee2e6;
}

.product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-title {
    font-size: 0.9rem;
    line-height: 1.3;
    max-width: 200px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.price-display {
    font-weight: 500;
    color: #6c757d;
}

.quantity-badge {
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 20px;
}

.total-price {
    font-size: 1rem;
}

@media (max-width: 768px) {
    .product-image-container {
        width: 40px;
        height: 40px;
    }
    
    .product-title {
        font-size: 0.8rem;
        max-width: 120px;
    }
    
    .price-display,
    .total-price {
        font-size: 0.875rem;
    }
}
</style>