<%- include('../includes/head.ejs') %>
    </head>

    <body class="bg-gray-50">
        <%- include('../includes/navigation.ejs') %>

        <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 via-blue-200 to-purple-200 py-12 px-4 sm:px-6 lg:px-8">
            <div class="w-full max-w-md bg-white rounded-xl shadow-xl p-8">
                <div class="flex flex-col items-center mb-8">
                    <a href="/" class="flex items-center gap-2 mb-2">
                        <span class="text-3xl font-pacifico text-primary"><i class="ri-store-line"></i> Phương Store</span>
                    </a>
                    <h1 class="text-3xl font-bold text-gray-900 mb-1">Đăng nhập</h1>
                    <p class="text-gray-600">Đăng nhập vào tài khoản của bạn để tiếp tục</p>
                </div>
                <% if (error) { %>
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center justify-center">
                        <i class="ri-error-warning-line mr-2 text-xl"></i>
                        <span><%= error %></span>
                    </div>
                <% } %>
                <form class="space-y-6" action="/login" method="POST">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email" name="email" id="email" required autocomplete="username"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors bg-gray-50">
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Mật khẩu</label>
                        <input type="password" name="password" id="password" required autocomplete="current-password"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors bg-gray-50">
                    </div>
                    <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg font-semibold text-lg hover:bg-primary-dark transition flex items-center justify-center shadow-md">
                        <i class="ri-login-box-line mr-2 text-xl"></i>
                        Đăng nhập
                    </button>
                </form>
                <div class="mt-6 text-center">
                    <a href="/signup" class="text-blue-600 hover:underline font-medium">Chưa có tài khoản? Đăng ký ngay</a>
                </div>
            </div>
        </div>

        <%- include('../includes/end.ejs') %>