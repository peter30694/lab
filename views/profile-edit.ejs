<%- include('./includes/head.ejs') %>
</head>
<body class="bg-gray-50 min-h-screen">
    <%- include('./includes/navigation.ejs') %>
    <main class="max-w-xl mx-auto px-4 py-10">
        <div class="bg-white rounded-xl shadow p-8">
            <h2 class="text-2xl font-bold text-blue-700 mb-6 flex items-center gap-2"><i class="ri-edit-line"></i> Chỉnh sửa thông tin cá nhân</h2>
            <% if (error) { %>
                <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4"><%= error %></div>
            <% } %>
            <% if (success) { %>
                <div id="success-popup" class="bg-green-100 text-green-700 px-4 py-2 rounded mb-4"><%= success %></div>
                <script>
                    setTimeout(function() {
                        window.location.href = '/profile';
                    }, 500);
                </script>
            <% } %>
            <form action="/profile/edit" method="POST" class="flex flex-col gap-6">
                <div>
                    <label for="name" class="block font-semibold text-gray-700 mb-1">Tên</label>
                    <input type="text" id="name" name="name" value="<%= user.name %>" required class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>
                <div class="flex gap-4 justify-end">
                    <a href="/profile" class="px-5 py-2 rounded-lg bg-gray-200 text-gray-700 font-medium hover:bg-gray-300 transition">Huỷ</a>
                    <button type="submit" class="px-5 py-2 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition flex items-center gap-2">
                        <i class="ri-save-line"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </main>
    <%- include('./includes/end.ejs') %> 