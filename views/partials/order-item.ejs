<!-- Order Item Component -->
<tr class="hover:bg-gray-50 transition-colors">
    <td>
        <div class="flex items-center">
            <div class="w-15 h-15 overflow-hidden rounded-lg border border-gray-200 mr-3">
                <img src="<%= product.imageUrl || '/images/default-product.jpg' %>" 
                     class="w-full h-full object-cover" 
                     alt="<%= product.title || 'Sản phẩm' %>"
                     onerror="this.src='/images/default-product.jpg'">
            </div>
            <div>
                <h6 class="mb-1 text-sm font-semibold line-clamp-2 max-w-[200px]">
                    <%= product.title || 'Sản phẩm không xác định' %>
                </h6>
                <small class="text-gray-500 block">
                    ID: <%= product._id ? product._id.toString().substring(0, 8) : 'N/A' %>
                </small>
                <% if (product.category) { %>
                    <small class="text-gray-500 flex items-center gap-1">
                        <i class="fas fa-tag"></i><%= product.category %>
                    </small>
                <% } %>
            </div>
        </div>
    </td>
    <td class="text-center">
        <span class="font-medium text-gray-600">
            <%= product.price ? product.price.toLocaleString('vi-VN') : '0' %>₫
        </span>
    </td>
    <td class="text-center">
        <span class="text-sm px-3 py-2 rounded-full bg-gray-100 text-gray-800">
            <%= product.quantity || 0 %>
        </span>
    </td>
    <td class="text-right">
        <span class="text-base font-bold text-blue-600">
            <%= product.price && product.quantity ? (product.price * product.quantity).toLocaleString('vi-VN') : '0' %>₫
        </span>
    </td>
</tr>